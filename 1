#include "mainwindow.h"
#include "ui_mainwindow.h"

int cont=0;
int cont2=100;
int precioPorDia=200;

MainWindow::MainWindow(QWidget *parent) :
    QMainWindow(parent),
    ui(new Ui::MainWindow)
{
    ui->setupUi(this);
}

MainWindow::~MainWindow()
{
    delete ui;
}

void MainWindow::on_boton_clicked()
{
    int lugarOcupado;
    cont++;

    if (cont==100)
    {
        cont=0;
    }
    QString contador = QString :: number(cont);
    ui->ocup1->setText(contador);
    lugarOcupado = 100 - cont;
    QString ocupado = QString :: number(lugarOcupado);
    ui->disp1->setText(ocupado);
}


void MainWindow::on_boton2_clicked()
{
    int espacioDisp;
    cont2--;

    if (cont2==0)
    {
        cont=100;
    }
    QString contador = QString :: number(cont2);
    ui->disp1->setText(contador);
    espacioDisp = 100 - cont2;
    QString disponible = QString :: number(espacioDisp);
    ui->ocup1->setText(disponible);
}
