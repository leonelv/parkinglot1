#include "mainwindow.h"
#include "ui_mainwindow.h"

int espacioOcupado = 0;
int espacioDisponible = 100;
int precioPorDia = 200;

MainWindow::MainWindow(QWidget *parent) :
    QMainWindow(parent),
    ui(new Ui::MainWindow)
{
    ui->setupUi(this);
}

MainWindow::~MainWindow()
{
    delete ui;
}

void MainWindow::on_boton_clicked()
{    
    if (espacioOcupado < 100) {
      espacioOcupado++;
      espacioDisponible--;
      asignarValores(espacioOcupado, espacioDisponible);
    }
}

void MainWindow::on_boton2_clicked()
{
    if (espacioOcupado > 0) {
      espacioOcupado--;
      espacioDisponible++;
      asignarValores(espacioOcupado, espacioDisponible);
    }
}

void asignarValores(int usedSpace, int availableSpace) {
    QString used = QString :: number(usedSpace);
    QString free = QString :: number(availableSpace);
    ui->ocup1->setText(used);
    ui->disp1->setText(free);
}
